<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/buttons" >

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Testing"
                android:id="@+id/textView" android:layout_weight="0.82" android:textAlignment="center"
                android:layout_marginLeft="150dp"/>

    </LinearLayout>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Test Data"
            android:id="@+id/btnClassify"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp" android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/btnStartTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Start"
        android:layout_below="@id/buttons"/>
    <Button
        android:id="@+id/btnStopTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Stop"
        android:layout_alignParentRight="true" android:layout_below="@id/buttons"/>

</RelativeLayout>