<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/buttons" >

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Training"
                android:id="@+id/textView" android:layout_weight="0.82" android:textAlignment="center"
                android:layout_marginLeft="150dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chart_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttons" >
    </LinearLayout>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walking"
            android:id="@+id/radbtnwalking"
            android:layout_below="@+id/btnStop" android:layout_alignLeft="@+id/radbutrunning"
            android:onClick="onRadioButtonClick"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Running"
            android:id="@+id/radbutrunning"
            android:singleLine="true"
            android:layout_below="@+id/radbtnwalking" android:layout_centerHorizontal="true"
            android:onClick="onRadioButtonClick"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idle"
            android:id="@+id/radbotIdle"
            android:layout_below="@+id/radbutrunning" android:layout_centerHorizontal="true"
            android:onClick="onRadioButtonClick"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Classify Test"
            android:id="@+id/btnTest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp" android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/btnStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Start"
        android:layout_below="@+id/chart_container" android:layout_toLeftOf="@+id/radbotIdle"
        android:layout_toRightOf="@+id/chart_container"/>
    <Button
        android:id="@+id/btnStop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Stop"
        android:layout_alignTop="@+id/btnStart" android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/radbutrunning"/>

</RelativeLayout>